html
    head
        title= title
        link(rel='stylesheet', href='styles/mash.css')
        meta( name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0' )
    body
        #container
            a( href='/logout' style='position: absolute; top: 8px; right: 8px;') logout
            h1() MASH - Admin
            h2() Account #{account}
            h2() Displays
            .instance-list
                include instance.pug
                each display in displays
                    +display( display )
            h2( style='text-align: center' ) Media
            .mash-container( data-account= account )
        script(src='/scripts/mash.js')